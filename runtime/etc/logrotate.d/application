/var/log/application.log {
        rotate 4
        weekly
        #size 10M
        missingok
        notifempty
        copytruncate
        compress
        delaycompress
        sharedscripts
        postrotate
                reload rsyslog >/dev/null 2>&1 || true
                /usr/sbin/scalyr-agent-2 stop 
                /usr/sbin/scalyr-agent-2 start
        endscript
}
